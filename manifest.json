{
  "manifest_version": 3,
  "name": "Olive Jira Helper",
  "description": "Better Jira management!",
  "version": "1",
  "author": "alex.merkert@oliveai.com",
  "background": {
    "service_worker": "background.js"
  },
  "page_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/lion-16.png",
      "32": "images/lion-32.png",
      "48": "images/lion-48.png",
      "128": "images/lion-128.png"
    },
    "default_title": "JiraHelper"
  },
  "icons": {
    "16": "images/lion-16.png",
    "32": "images/lion-32.png",
    "48": "images/lion-48.png",
    "128": "images/lion-128.png"
  },
  "permissions": ["storage", "activeTab", "declarativeContent"]
}